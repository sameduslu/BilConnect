@using BilConnect.Data.ViewModels;
@using BilConnect.Data.ViewModels.PostReportViewModels;
@model NewPostReportVM

@{
    ViewData["Title"] = "Add a new post";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Post</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden field for ReportedPostId -->
                    <input type="hidden" asp-for="ReportedPostId" />


                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" asp-controller="PostReports" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
